<% layout('/layouts/boilerplate.ejs') -%>
<body>
    <div class="row mt-3">
        <div class="col-md-6 offset-md-3">
            <h3>Edit yourListing</h3>
            <form method="post" enctype="multipart/form-data" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" required id="title" class="form-control" name="listing[title]" value="<%=listing.title%>">
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Title should be valid!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" required class="form-control" type="text" name="listing[description]" placeholder="Enter description"><%=listing.description%></textarea>
                    <div class="valid-feedback">Description looks good!</div>
                    <div class="invalid-feedback">Please Enter valid description!</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input type="file" id="image" class="form-control" name="listing[image]">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" required class="form-control" id="price" name="listing[price]" value="<%=listing.price%>">
                        <div class="valid-feedback">Price looks good!</div>
                        <div class="invalid-feedback">Price should be valid!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" required id="country" class="form-control" name="listing[country]" value="<%=listing.country%>">
                        <div class="valid-feedback">Country looks good!</div>
                        <div class="invalid-feedback">Country should be valid!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" required id="location" class="form-control" name="listing[location]" value="<%=listing.location%>">
                    <div class="valid-feedback">Location looks good!</div>
                    <div class="invalid-feedback">Location should be valid!</div>
                </div>
                <button class="btn btn-dark add-btn mb-5">Edit</button>
            </form>
        </div>
    </div>
</body>