<nav class="navbar navbar-expand-sm bg-body-tertiary border-bottom sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand ms-2" href="/listings"><i class="fa-solid fa-compass"></i></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/listings">Explore</a>
                </li>
            </ul>
        </div>
        <div class="navbar-nav ms-auto">
            <form class="d-flex" role="search">
                <input class="form-control me-2 search-input" type="search" placeholder="Search destinations..." aria-label="Search"
                    id="searchInput" />
                <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
            </form>
        </div>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/listings/new">SafarNest your home</a>
                </li>
                <% if(!currUser) {%>
                    <li class="nav-item">
                        <a class="nav-link" href="/login"><b>Login</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/signup"><b>Signup</b></a>
                    </li>
                    <% } %>
                        <% if(currUser){ %>
                            <li class="nav-item mt-2">
                                <span class="navbar-text me-2">Welcome, <%= currUser.username %>!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout"><b>Logout</b></a>
                            </li>
                            <% } %>
            </ul>
        </div>
    </div>
